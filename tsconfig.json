{
  "compilerOptions": {
    "allowJs": true,
    "strict": true,
    "module": "commonjs",
    "outDir": "./lib",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "lib": [
      "dom",
      "es6",
      "es7",
      "es2015.promise"
    ]
  },
  "include": [
    "./src/"
  ],
  "exclude": [
    "node_modules"
  ]
}